<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:background="#E0FFFF">
	<LinearLayout android:id="@+id/linearLayout1"
		android:layout_width="fill_parent" android:layout_weight="1"
		android:padding="10sp" android:layout_height="match_parent">
		<TextView android:id="@+id/textView1" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="이              름"
			android:textColor="#000000"></TextView>
		<EditText android:layout_height="wrap_content"
			android:layout_weight="1" android:layout_width="wrap_content" android:id="@+id/inputname">
			<requestFocus></requestFocus>
		</EditText>
	</LinearLayout>
	<LinearLayout android:id="@+id/linearLayout2"
		android:layout_width="fill_parent" android:layout_weight="1"
		android:padding="10sp" android:layout_height="match_parent">
		<TextView android:layout_height="wrap_content" android:id="@+id/TextView01"
			android:layout_width="wrap_content" android:text="단말기 번호"
			android:textColor="#000000"></TextView>
		<EditText android:layout_height="wrap_content"
			android:layout_weight="1" android:layout_width="wrap_content" android:id="@+id/inputnum"></EditText>
	</LinearLayout>
	<LinearLayout android:id="@+id/linearLayout3"
		android:layout_width="fill_parent" android:padding="10sp"
		android:layout_weight="1" android:layout_height="match_parent">
		<TextView android:layout_height="wrap_content" android:id="@+id/TextView02"
			android:layout_width="wrap_content" android:text="이메일 주소"
			android:textColor="#000000"></TextView>
		<EditText android:layout_height="wrap_content"
			android:layout_weight="1" android:layout_width="wrap_content" android:id="@+id/inputaddress"></EditText>
	</LinearLayout>
	<LinearLayout android:id="@+id/linearLayout4"
		android:layout_width="fill_parent" android:layout_weight="1"
		android:padding="10sp" android:layout_height="match_parent">
		<TextView android:layout_height="wrap_content" android:id="@+id/TextView03"
			android:layout_width="wrap_content" android:text="메              모"
			android:textColor="#000000"></TextView>
		<EditText android:layout_height="wrap_content"
			android:layout_weight="1" android:layout_width="wrap_content" android:id="@+id/inputmemo"></EditText>
	</LinearLayout>
	<LinearLayout android:id="@+id/linearLayout5"
		android:layout_width="match_parent" android:gravity="right"
		android:layout_height="match_parent" android:layout_weight="1"
		android:padding="10sp">
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="등록" android:id="@+id/saveaddress"></Button>
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="취소" android:id="@+id/canceladdress"></Button>
	</LinearLayout>

</LinearLayout>
