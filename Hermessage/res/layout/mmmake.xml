<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:gravity="top|center" android:orientation="vertical" android:id="@+id/linear"
	android:background="@drawable/background2">
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout1" android:gravity="center">
        <TextView android:layout_width="wrap_content" android:textColor="#000000" android:layout_height="wrap_content" android:textSize="20sp" android:id="@+id/mmmake_title"></TextView>
    </LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="match_parent" android:id="@+id/linearLayout6">
		<LinearLayout android:layout_width="wrap_content"
			android:id="@+id/linearLayout5" android:layout_height="match_parent"
			android:orientation="vertical" android:gravity="center"
			android:layout_weight="1">
			<Button android:id="@+id/Attachment" android:background="@drawable/attachimage"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
			<TextView android:id="@+id/textView2" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="첨부파일 등록"
				android:textColor="#000000"></TextView>
		</LinearLayout>
		<LinearLayout android:layout_width="wrap_content"
			android:id="@+id/linearLayout7" android:layout_height="match_parent"
			android:orientation="vertical" android:gravity="center"
			android:layout_weight="1">
			<Button android:id="@+id/Receiver" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:background="@drawable/receiversetting"></Button>
			<TextView android:id="@+id/textView3" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="수신자 등록"
				android:textColor="#000000"></TextView>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/linearLayout3" android:layout_height="wrap_content">
		<EditText android:layout_height="wrap_content" android:id="@+id/Context"
			android:layout_width="fill_parent" android:hint="내용을 입력하세요"
			android:height="250px"></EditText>
	</LinearLayout>
	<ScrollView android:layout_width="match_parent"
		android:layout_height="wrap_content" android:id="@+id/scrollView1">
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="match_parent" android:layout_gravity="left"
			android:id="@+id/linearLayout10" android:orientation="horizontal">
			<LinearLayout android:layout_width="match_parent"
				android:orientation="vertical" android:id="@+id/imagescroll"
				android:layout_weight="1" android:layout_height="fill_parent"></LinearLayout>
			<LinearLayout android:layout_width="match_parent"
				android:orientation="vertical" android:id="@+id/contentscroll"
				android:layout_weight="1" android:layout_height="fill_parent"></LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
